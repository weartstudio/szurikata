{% extends "base.twig" %}

{% block content %}
	<article class="w-post-type-{{post.post_type}}" id="w-post-{{post.ID}}">

        {# intro #}
		<header class="w-article-header uk-section uk-padding-remove-bottom uk-background-muted">

			<div class="uk-container">
                <div class="uk-flex-middle uk-child-width-1-2@m" uk-grid>
                    <div class="uk-margin-large-bottom">
                        <h1>
                            {{ post.meta('s1-title') }}
                        </h1>
                        <div class="uk-margin-large-right uk-text-lead">
                            {{ post.meta('s1-text') }}
                        </div>
                        <a class="uk-button uk-button-secondary" href="{{ post.meta('s1-link').url }}">{{ post.meta('s1-link').title }}</a>
                    </div>
                    <div class="uk-text-center">
                        <img src="{{ Image(post.meta('s1-image')).src }}">
                    </div>
                </div>
			</div>

		</header>

        <section id="services" class="uk-container uk-margin-minus">
            <div class="uk-padding uk-border-bold">
                <div class="uk-section-title uk-margin-large-bottom">
                    <h4>{{ post.meta('s2-subtitle') }}</h4>
                    <h2>{{ post.meta('s2-title') }}</h2>
                </div>
                <div class="uk-child-width-1-3@m uk-child-width-1-2@s uk-margin-bottom" uk-grid>
                    {% for item in post.meta('s2-services') %}

                        <div class="uk-flex {% if loop.index > 6 %}w-services{% endif %}" {% if loop.index > 6 %}hidden{% endif %}>
                            <div class="uk-width-auto">
                                <svg style="max-width: 65px; max-height: 52.42px"><use href="#mancs"></svg>
                            </div>
                            <div class="uk-width-expand uk-margin-left">
                                <h5 class="uk-margin-remove">{{ item.title }}</h5>
                                <p class="uk-margin-remove">{{ item.text }}</p>
                            </div>
                        </div>
                    {% endfor %}

                </div>
                <div class="uk-flex uk-flex-center uk-margin-vertical w-services">
                    <button class="uk-button uk-button-secondary" uk-toggle="target: .w-services; animation: uk-animation-fade; queued: true">Még több</button>
                </div>
            </div>
        </section>


	</article>
{% endblock %}
